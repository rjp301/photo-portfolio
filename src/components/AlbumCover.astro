---
export interface Props {
  album;
}

const { album } = Astro.props;
---

<div class="container">
  <a href={album.id}>
    <img src={`/images/${album.cover}`} alt={album.name} />
    <div class="info">
      <div class="title">{album.name}</div>
      <div class="view">- view -</div>
    </div>
  </a>
</div>

<style lang="scss">
  figure {
    background-color: #eee;
    position: relative;
    display: inline-block;
    margin: 0 0 1em;
    width: 100%;
    box-shadow: var(--boxShadow);
  }

  img {
    width: 100%;
    display: block;
    height: auto;
  }

  div.info {
    font-weight: 200;
    text-decoration: none;

    background-color: rgba(0, 0, 0, 0.5);
    color: white;

    opacity: 0;

    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;

    display: flex;
    flex-direction: column;

    justify-content: center;
    align-items: center;
    transition: 0.3s ease-in;

    &:hover {
      opacity: 1;
    }
  }

  div.view {
    padding-top: 5px;
    opacity: 0.7;
    font-style: italic;
    font-weight: 300;
  }
</style>
