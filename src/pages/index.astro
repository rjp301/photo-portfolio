---
import Layout from "@/layouts/Layout.astro";
import getAlbums from "@/lib/getAlbums.js";
const albums = await getAlbums();
---

<Layout title="Portfolio">
  <div class="columns-sm">
    {
      albums.map((album) => (
        <figure class="shadow-lg relative inline-block mb-3">
          <a href={`/portfolio/${album.data.slug}`}>
            <img class="block h-auto" src={album.cover} alt={album.data.name} />
            <div class="flex flex-col items-center justify-center font-thin absolute bottom-0 md:top-0 w-full py-4 bg-muted-foreground/50 text-background hover:opacity-100 md:opacity-0 transition-opacity">
              <h2 class="">{album.data.name}</h2>
              <h3 class="italic text-sm">— view —</h3>
            </div>
          </a>
        </figure>
      ))
    }
  </div>
</Layout>
