---
import AlbumCover from "../../components/AlbumCover.astro";
import Layout from "../../layouts/Layout.astro";
import { getAlbums } from "../../utils/getAlbums";
const albums = await getAlbums();
---

<Layout title="Portfolio">
  <div class="masonry">
    {albums.map((album) => <AlbumCover album={album} />)}
  </div>
</Layout>

<style lang="scss">
  .masonry {
    margin: 0 1em;
    columns: 4;
    column-gap: 1em;

    @media (max-width: 1400px) {
      columns: 3;
    }
    @media (max-width: 900px) {
      columns: 2;
    }
    @media (max-width: 500px) {
      columns: 1;
    }
  }

  .brick {
    background-color: #eee;
    position: relative;
    display: inline-block;
    margin: 0 0 1em;
    width: 100%;

    img {
      width: 100%;
      display: block;
      height: auto;
    }

    a {
      font-size: 3em;
      font-weight: lighter;
      text-decoration: none;
      background-color: rgba(0, 0, 0, 0.7);
      opacity: 0;
      position: absolute;
      top: 0;
      left: 0;
      height: 100%;
      width: 100%;
      color: white;
      display: flex;
      text-align: center;
      font-size: large;
      justify-content: center;
      align-items: center;
      transition: 0.3s ease-in;

      &:hover {
        opacity: 1;
      }
    }
  }

  .text-overlay h2 {
    font-weight: normal;
  }

  .text-overlay h3 {
    font-weight: normal;
    font-size: smaller;
  }
</style>
